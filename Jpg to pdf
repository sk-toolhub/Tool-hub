  <script>
    // DOM Elements
    const fileInputArea = document.getElementById('fileInputArea');
    const imageFilesInput = document.getElementById('imageFiles');
    const imagesPreview = document.getElementById('imagesPreview');
    const imagePreviewContainer = document.getElementById('imagePreviewContainer');
    const pageSizeBtns = document.querySelectorAll('.page-size-btn');
    const orientationSelect = document.getElementById('orientationSelect');
    const fitModeSelect = document.getElementById('fitModeSelect');
    const marginSlider = document.getElementById('marginSlider');
    const marginValue = document.getElementById('marginValue');
    const qualitySlider = document.getElementById('qualitySlider');
    const qualityValue = document.getElementById('qualityValue');
    const addPageNumbers = document.getElementById('addPageNumbers');
    const addTimestamp = document.getElementById('addTimestamp');
    const resetBtn = document.getElementById('resetBtn');
    const convertBtn = document.getElementById('convertBtn');
    const downloadBtn = document.getElementById('downloadBtn');
    const resultsContainer = document.getElementById('resultsContainer');
    const pageCount = document.getElementById('pageCount');
    const loadingOverlay = document.getElementById('loadingOverlay');
    const loadingText = document.getElementById('loadingText');
    const progressBar = document.getElementById('progressBar');
    const progressStatus = document.getElementById('progressStatus');

    // Application State
    let uploadedImages = [];
    let currentPageSize = 'a4';
    let pdfBlob = null;

    // Initialize
    function init() {
      setupEventListeners();
      updateMarginDisplay();
      updateQualityDisplay();
    }

    // Setup event listeners
    function setupEventListeners() {
      // File input click
      fileInputArea.addEventListener('click', () => imageFilesInput.click());
      
      // File input change
      imageFilesInput.addEventListener('change', handleFilesSelect);
      
      // Drag and drop
      fileInputArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        fileInputArea.classList.add('drag-over');
      });
      
      fileInputArea.addEventListener('dragleave', () => {
        fileInputArea.classList.remove('drag-over');
      });
      
      fileInputArea.addEventListener('drop', (e) => {
        e.preventDefault();
        fileInputArea.classList.remove('drag-over');
        if (e.dataTransfer.files.length) {
          imageFilesInput.files = e.dataTransfer.files;
          handleFilesSelect({ target: imageFilesInput });
        }
      });
      
      // Page size buttons
      pageSizeBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          pageSizeBtns.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentPageSize = btn.dataset.size;
        });
      });
      
      // Range sliders
      marginSlider.addEventListener('input', updateMarginDisplay);
      qualitySlider.addEventListener('input', updateQualityDisplay);
      
      // Button events
      resetBtn.addEventListener('click', resetAll);
      convertBtn.addEventListener('click', convertToPDF);
      downloadBtn.addEventListener('click', downloadPDF);
    }

    // Update margin display
    function updateMarginDisplay() {
      marginValue.textContent = `${marginSlider.value} px`;
    }

    // Update quality display
    function updateQualityDisplay() {
      qualityValue.textContent = `${qualitySlider.value}%`;
    }

    // Handle files select
    async function handleFilesSelect(e) {
      if (!e.target.files.length) return;
      
      const files = Array.from(e.target.files);
      let totalSize = 0;
      
      // Check each file
      for (const file of files) {
        // Check file size (50MB limit per file)
        if (file.size > 50 * 1024 * 1024) {
          alert(`"${file.name}" is too large. Please upload files smaller than 50MB.`);
          return;
        }
        
        // Check file type
        const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp', 'image/gif', 'image/bmp', 'image/tiff'];
        if (!validTypes.includes(file.type) && !file.name.match(/\.(jpg|jpeg|png|webp|gif|bmp|tiff)$/i)) {
          alert(`"${file.name}" is not a supported image format. Please upload JPG, PNG, or WebP files.`);
          return;
        }
        
        totalSize += file.size;
      }
      
      // Check total size (100MB limit)
      if (totalSize > 100 * 1024 * 1024) {
        alert('Total file size exceeds 100MB. Please upload fewer or smaller images.');
        return;
      }
      
      // Show loading
      loadingOverlay.style.display = 'flex';
      loadingText.textContent = 'Loading images...';
      progressBar.style.width = '10%';
      
      try {
        // Clear previous images if starting fresh
        if (uploadedImages.length === 0) {
          uploadedImages = [];
        }
        
        // Process each file
        for (let i = 0; i < files.length; i++) {
          const file = files[i];
          
          // Update progress
          const progress = 10 + ((i + 1) / files.length) * 40;
          progressBar.style.width = `${progress}%`;
          progressStatus.textContent = `Loading image ${i + 1} of ${files.length}...`;
          
          // Create image object
          const imageObject = {
            id: Date.now() + i,
            file: file,
            name: file.name,
            size: file.size,
            url: URL.createObjectURL(file),
            order: uploadedImages.length + i
          };
          
          uploadedImages.push(imageObject);
        }
        
        // Update UI
        updateImagesPreview();
        
        // Hide loading
        loadingOverlay.style.display = 'none';
        imagePreviewContainer.style.display = 'block';
        
      } catch (error) {
        console.error('Image loading error:', error);
        alert('Failed to load some images. Please try again.');
        loadingOverlay.style.display = 'none';
      }
    }

    // Update images preview
    function updateImagesPreview() {
      imagesPreview.innerHTML = '';
      
      if (uploadedImages.length === 0) {
        imagePreviewContainer.style.display = 'none';
        return;
      }
      
      // Sort by current order
      uploadedImages.sort((a, b) => a.order - b.order);
      
      // Create preview for each image
      uploadedImages.forEach((image, index) => {
        const previewItem = document.createElement('div');
        previewItem.className = 'image-preview-item';
        previewItem.dataset.id = image.id;
        previewItem.draggable = true;
        
        const img = document.createElement('img');
        img.className = 'image-preview-img';
        img.src = image.url;
        img.alt = image.name;
        img.loading = 'lazy';
        
        const imageNumber = document.createElement('div');
        imageNumber.className = 'image-number';
        imageNumber.textContent = `Page ${index + 1}`;
        
        const imageName = document.createElement('div');
        imageName.style.fontSize = '11px';
        imageName.style.color = '#888';
        imageName.style.overflow = 'hidden';
        imageName.style.textOverflow = 'ellipsis';
        imageName.style.whiteSpace = 'nowrap';
        imageName.textContent = image.name;
        
        const controlsDiv = document.createElement('div');
        controlsDiv.className = 'image-controls';
        
        // Up button (not for first item)
        if (index > 0) {
          const upBtn = document.createElement('button');
          upBtn.className = 'control-btn';
          upBtn.innerHTML = '‚Üë';
          upBtn.title = 'Move up';
          upBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            moveImageUp(image.id);
          });
          controlsDiv.appendChild(upBtn);
        }
        
        // Down button (not for last item)
        if (index < uploadedImages.length - 1) {
          const downBtn = document.createElement('button');
          downBtn.className = 'control-btn';
          downBtn.innerHTML = '‚Üì';
          downBtn.title = 'Move down';
          downBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            moveImageDown(image.id);
          });
          controlsDiv.appendChild(downBtn);
        }
        
        // Delete button
        const deleteBtn = document.createElement('button');
        deleteBtn.className = 'control-btn delete-btn';
        deleteBtn.innerHTML = '√ó';
        deleteBtn.title = 'Remove image';
        deleteBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          removeImage(image.id);
        });
        controlsDiv.appendChild(deleteBtn);
        
        previewItem.appendChild(img);
        previewItem.appendChild(imageNumber);
        previewItem.appendChild(imageName);
        previewItem.appendChild(controlsDiv);
        imagesPreview.appendChild(previewItem);
      });
      
      // Add drag and drop functionality
      setupDragAndDrop();
    }

    // Setup drag and drop for reordering
    function setupDragAndDrop() {
      const items = imagesPreview.querySelectorAll('.image-preview-item');
      
      items.forEach(item => {
        item.addEventListener('dragstart', handleDragStart);
        item.addEventListener('dragover', handleDragOver);
        item.addEventListener('drop', handleDrop);
        item.addEventListener('dragend', handleDragEnd);
      });
    }

    let draggedItem = null;

    function handleDragStart(e) {
      draggedItem = this;
      this.style.opacity = '0.5';
      e.dataTransfer.effectAllowed = 'move';
      e.dataTransfer.setData('text/html', this.innerHTML);
    }

    function handleDragOver(e) {
      e.preventDefault();
      e.dataTransfer.dropEffect = 'move';
      return false;
    }

    function handleDrop(e) {
      e.preventDefault();
      e.stopPropagation();
      
      if (draggedItem !== this) {
        const draggedId = parseInt(draggedItem.dataset.id);
        const targetId = parseInt(this.dataset.id);
        
        // Swap orders
        const draggedImage = uploadedImages.find(img => img.id === draggedId);
        const targetImage = uploadedImages.find(img => img.id === targetId);
        
        if (draggedImage && targetImage) {
          const tempOrder = draggedImage.order;
          draggedImage.order = targetImage.order;
          targetImage.order = tempOrder;
          
          updateImagesPreview();
        }
      }
      
      return false;
    }

    function handleDragEnd(e) {
      if (draggedItem) {
        draggedItem.style.opacity = '1';
        draggedItem = null;
      }
    }

    // Image management functions
    function moveImageUp(imageId) {
      const imageIndex = uploadedImages.findIndex(img => img.id === imageId);
      if (imageIndex > 0) {
        const tempOrder = uploadedImages[imageIndex].order;
        uploadedImages[imageIndex].order = uploadedImages[imageIndex - 1].order;
        uploadedImages[imageIndex - 1].order = tempOrder;
        updateImagesPreview();
      }
    }

    function moveImageDown(imageId) {
      const imageIndex = uploadedImages.findIndex(img => img.id === imageId);
      if (imageIndex < uploadedImages.length - 1) {
        const tempOrder = uploadedImages[imageIndex].order;
        uploadedImages[imageIndex].order = uploadedImages[imageIndex + 1].order;
        uploadedImages[imageIndex + 1].order = tempOrder;
        updateImagesPreview();
      }
    }

    function removeImage(imageId) {
      uploadedImages = uploadedImages.filter(img => img.id !== imageId);
      
      // Reassign orders
      uploadedImages.forEach((img, index) => {
        img.order = index;
      });
      
      updateImagesPreview();
    }

    // Convert images to PDF
    async function convertToPDF() {
      if (uploadedImages.length === 0) {
        alert('Please upload at least one image to convert.');
        return;
      }
      
      // Show loading
      loadingOverlay.style.display = 'flex';
      loadingText.textContent = 'Creating PDF document...';
      progressBar.style.width = '0%';
      
      try {
        // Get settings
        const margin = parseInt(marginSlider.value);
        const quality = parseInt(qualitySlider.value) / 100;
        const orientation = orientationSelect.value;
        const fitMode = fitModeSelect.value;
        const includePageNumbers = addPageNumbers.checked;
        const includeTimestamp = addTimestamp.checked;
        
        // Sort images by order
        const sortedImages = [...uploadedImages].sort((a, b) => a.order - b.order);
        
        // Create PDF using jsPDF
        const { jsPDF } = window.jspdf;
        let pdf;
        
        // Set page dimensions based on selected size
        let pageWidth, pageHeight;
        switch (currentPageSize) {
          case 'letter':
            pageWidth = 8.5 * 72; // 72 points per inch
            pageHeight = 11 * 72;
            break;
          case 'legal':
            pageWidth = 8.5 * 72;
            pageHeight = 14 * 72;
            break;
          case 'a3':
            pageWidth = 11.69 * 72;
            pageHeight = 16.54 * 72;
            break;
          case 'a4':
          default:
            pageWidth = 8.27 * 72;
            pageHeight = 11.69 * 72;
            break;
        }
        
        // Swap dimensions for landscape
        if (orientation === 'landscape') {
          [pageWidth, pageHeight] = [pageHeight, pageWidth];
        }
        
        // Initialize PDF
        pdf = new jsPDF({
          orientation: orientation === 'landscape' ? 'landscape' : 'portrait',
          unit: 'pt',
          format: currentPageSize === 'custom' ? [pageWidth, pageHeight] : currentPageSize
        });
        
        // Process each image
        for (let i = 0; i < sortedImages.length; i++) {
          const image = sortedImages[i];
          
          // Update progress
          const progress = ((i + 1) / sortedImages.length) * 90;
          progressBar.style.width = `${progress}%`;
          progressStatus.textContent = `Processing image ${i + 1} of ${sortedImages.length}...`;
          
          // Load image
          const img = await loadImage(image.url);
          
          // Calculate image dimensions to fit page
          let imgWidth = img.width;
          let imgHeight = img.height;
          
          const pageContentWidth = pageWidth - (margin * 2);
          const pageContentHeight = pageHeight - (margin * 2);
          
          // Auto orientation if selected
          let currentOrientation = orientation;
          if (orientation === 'auto') {
            const imgAspect = imgWidth / imgHeight;
            const pageAspect = pageContentWidth / pageContentHeight;
            currentOrientation = imgAspect > pageAspect ? 'landscape' : 'portrait';
            
            // If auto orientation changes, we need to adjust page dimensions
            if (currentOrientation === 'landscape' && orientation === 'auto') {
              [pageContentWidth, pageContentHeight] = [pageContentHeight, pageContentWidth];
            }
          }
          
          // Calculate scaling based on fit mode
          let scale = 1;
          if (fitMode === 'fit') {
            // Fit to page while maintaining aspect ratio
            const widthScale = pageContentWidth / imgWidth;
            const heightScale = pageContentHeight / imgHeight;
            scale = Math.min(widthScale, heightScale);
          } else if (fitMode === 'fill') {
            // Fill page, might crop
            const widthScale = pageContentWidth / imgWidth;
            const heightScale = pageContentHeight / imgHeight;
            scale = Math.max(widthScale, heightScale);
          } else if (fitMode === 'stretch') {
            // Stretch to fill exactly
            imgWidth = pageContentWidth;
            imgHeight = pageContentHeight;
          }
          
          if (fitMode !== 'stretch') {
            imgWidth *= scale;
            imgHeight *= scale;
          }
          
          // Calculate position to center image
          const x = margin + (pageContentWidth - imgWidth) / 2;
          const y = margin + (pageContentHeight - imgHeight) / 2;
          
          // Add new page for all images except first
          if (i > 0) {
            pdf.addPage();
          }
          
          // Add image to PDF
          pdf.addImage(img, 'JPEG', x, y, imgWidth, imgHeight, `image${i}`, 'MEDIUM', 0);
          
          // Add page number if enabled
          if (includePageNumbers) {
            pdf.setFontSize(10);
            pdf.setTextColor(100, 100, 100);
            pdf.text(`Page ${i + 1}`, pageWidth - margin - 30, pageHeight - margin + 15);
          }
          
          // Add timestamp on first page if enabled
          if (includeTimestamp && i === 0) {
            const now = new Date();
            const timestamp = now.toLocaleDateString() + ' ' + now.toLocaleTimeString();
            pdf.setFontSize(8);
            pdf.setTextColor(150, 150, 150);
            pdf.text(`Created: ${timestamp}`, margin, pageHeight - margin + 15);
          }
        }
        
        // Generate PDF blob
        pdfBlob = pdf.output('blob');
        
        // Update progress
        progressBar.style.width = '100%';
        progressStatus.textContent = 'PDF created successfully!';
        
        // Show results after a short delay
        setTimeout(() => {
          loadingOverlay.style.display = 'none';
          showConversionResults();
        }, 500);
        
      } catch (error) {
        console.error('PDF conversion error:', error);
        alert('Failed to create PDF. Please try again with different settings or images.');
        loadingOverlay.style.display = 'none';
      }
    }

    // Helper function to load image
    function loadImage(url) {
      return new Promise((resolve, reject) => {
        const img = new Image();
        img.crossOrigin = 'anonymous';
        img.onload = () => resolve(img);
        img.onerror = reject;
        img.src = url;
      });
    }

    // Show conversion results
    function showConversionResults() {
      pageCount.textContent = uploadedImages.length;
      resultsContainer.style.display = 'block';
      downloadBtn.style.display = 'block';
      
      // Scroll to results
      resultsContainer.scrollIntoView({ behavior: 'smooth' });
    }

    // Download PDF
    function downloadPDF() {
      if (!pdfBlob) {
        alert('No PDF to download. Please convert images first.');
        return;
      }
      
      const url = URL.createObjectURL(pdfBlob);
      const link = document.createElement('a');
      link.download = 'converted-images.pdf';
      link.href = url;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      URL.revokeObjectURL(url);
    }

    // Reset all
    function resetAll() {
      // Clean up object URLs
      uploadedImages.forEach(img => URL.revokeObjectURL(img.url));
      
      // Reset state
      uploadedImages = [];
      pdfBlob = null;
      
      // Reset UI
      imageFilesInput.value = '';
      imagesPreview.innerHTML = '';
      imagePreviewContainer.style.display = 'none';
      resultsContainer.style.display = 'none';
      downloadBtn.style.display = 'none';
      
      // Reset settings
      pageSizeBtns.forEach(btn => btn.classList.remove('active'));
      document.querySelector('[data-size="a4"]').classList.add('active');
      currentPageSize = 'a4';
      orientationSelect.value = 'portrait';
      fitModeSelect.value = 'fit';
      marginSlider.value = '20';
      qualitySlider.value = '90';
      addPageNumbers.checked = true;
      addTimestamp.checked = false;
      updateMarginDisplay();
      updateQualityDisplay();
      
      // Hide loading if visible
      loadingOverlay.style.display = 'none';
    }

    // FAQ Functionality
    function toggleFAQ(element) {
      const answer = element.parentElement.querySelector('.faq-answer');
      const icon = element.querySelector('span:last-child');
      
      answer.classList.toggle('active');
      icon.textContent = answer.classList.contains('active') ? '‚àí' : '+';
    }

    // Initialize on load
    window.addEventListener('load', init);
  </script>
</body>
  </html>
